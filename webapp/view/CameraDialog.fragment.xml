<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
  <Dialog title="Click on Capture to take a picture"  class="sapUiSizeCompact">
	<content>
		<html:video id="player" autoplay="true"> </html:video>
		<Input id="PicInputId" placeholder="Enter Image name.."/>
    </content>
    <beginButton>
      <Button text="Capture Pic" type="Accept" press="onCapturePic" ></Button>
      </beginButton>
      <endButton>
      <Button text="Cancel"  press="onCancel" ></Button>
      </endButton>
  </Dialog>
</core:FragmentDefinition>